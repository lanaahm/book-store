<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateBukuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingHorizontal="18dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nama_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Buku"
            android:backgroundTint="#fff"
            android:paddingVertical="8dp"
            app:startIconDrawable="@drawable/ic_book__1_">
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pengarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Buku"
            android:paddingVertical="8dp"
            app:startIconDrawable="@drawable/ic_book__1_">
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/thnterberit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Buku"
            android:paddingVertical="8dp"
            app:startIconDrawable="@drawable/ic_book__1_">
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Buku"
            android:paddingVertical="8dp"
            app:startIconDrawable="@drawable/ic_book__1_">
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/simpan_buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/back_tabs"
            tools:backgroundTint="#3D3A35"
            android:textColor="#fff"
            android:text="sign In"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>